<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicodangelo.pantrie" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nicodangelo.util.ConvertMass"
            android:label="@string/title_activity_convert_mass" >
        </activity>
        <activity
            android:name="com.nicodangelo.util.ConvertVolume"
            android:label="@string/title_activity_convert_volume" >
        </activity>
        <activity
            android:name="com.nicodangelo.util.Settings"
            android:parentActivityName="com.nicodangelo.pantrie.Home"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.nicodangelo.list.AllTables"
            android:parentActivityName="com.nicodangelo.pantrie.Home"
            android:label="@string/title_activity_list_main" >
        </activity>
        <activity
            android:name="com.nicodangelo.list.GroceryTable"
            android:parentActivityName="com.nicodangelo.pantrie.Home"
            android:label="@string/title_activity_grocery_table" >
        </activity>
    </application>

</manifest>
